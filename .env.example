# Grafana Configuration
# Copy this file to .env and customize for your environment

# --- Basic Connection Settings ---
GRAFANA_PORT=3000
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_api_key_here

# --- SSL Configuration ---
GRAFANA_SSL_VERIFY=false

# --- Retry Configuration ---
GRAFANA_RETRY_MAX_ATTEMPTS=3
GRAFANA_RETRY_WAIT_MULTIPLIER=1000

# --- Dashboard Settings ---
GRAFANA_HEALTH_TIMEOUT=30
GRAFANA_DASHBOARD_PATH=/etc/grafana/provisioning/dashboards
GRAFANA_UPDATE_INTERVAL=10

# --- Default Labels ---
GRAFANA_DEFAULT_SERVICE=lead_ignite
GRAFANA_ENVIRONMENT=development

# --- Prometheus Configuration ---
GRAFANA_MULTIPROC_DIR=/tmp/prometheus

# --- Circuit Breaker Configuration ---
GRAFANA_CIRCUIT_FAILURE_THRESHOLD=5
GRAFANA_CIRCUIT_RECOVERY_TIMEOUT=300

# --- Connection Pool Settings ---
GRAFANA_POOL_CONNECTIONS=20
GRAFANA_POOL_MAXSIZE=100
GRAFANA_MAX_RETRIES=3
GRAFANA_CONNECT_TIMEOUT=3.05
GRAFANA_READ_TIMEOUT=30.0
